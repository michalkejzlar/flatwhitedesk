<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.easycore.nomadesk">

	<!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

	<application
			android:name=".NomadeskApp"
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:supportsRtl="true"
			android:theme="@style/Nomadesk">
		<activity android:name=".views.activities.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".VenueDetailActivity"
				android:configChanges="orientation|keyboardHidden|screenSize"
				android:label="@string/title_activity_venue_detail"
				android:theme="@style/Nomadesk.Fullscreen">
		</activity>
		<meta-data
				android:name="com.google.android.geo.API_KEY"
				android:value="@string/google_maps_key"/>
	</application>

</manifest>